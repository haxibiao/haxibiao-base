#!/bin/bash

echo "准备目录权限"
chmod -R 777 ./storage/
chmod -R 777 .env*
git config core.filemode false

echo "修复storage目录"
[ -f ./public/storage ] && rm -f ./public/storage
[ ! -d ./public/storage ] && php artisan storage:link

echo "更新 env ..."
php artisan set:env --db_host=数据库服务器 --db_database=数据库名

echo "自动更新数据结构..."
php artisan migrate

echo "刷新缓存..."
php artisan lighthouse:clear-cache
